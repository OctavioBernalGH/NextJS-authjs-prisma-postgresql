generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Creamos los modelos necesarios en el mismo fichero schema.prisma
model User {
  id            String   @id @default(cuid())   // clave primaria, con cuid() autogenerado
  dni           String   @unique                // no se repite
  name          String
  surnames      String
  email         String   @unique                // no se repite
  password      String
  createdAt     DateTime @default(now())        // fecha autom√°tica
  updatedAt     DateTime @updatedAt             // se actualiza solo en cada update
  emailVerified DateTime?                       // puede ser null (con ?)
}
